{{- $.Scratch.Add "index" slice -}}
{{- range (append .Site.RegularPages (where .Site.Pages "Kind" "section")) -}}
    {{- $.Scratch.Add "index" (dict "title" .Title "tags" .Params.tags "contents" .Plain "permalink" .RelPermalink "summary" .Summary "date" (.Date.Format "2006-01-02") "edit" (.Lastmod.Format "2006-01-02") "section" .Section) -}}
{{- end -}}
{{- $.Scratch.Get "index" | jsonify -}}
